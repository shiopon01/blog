---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			article {
				max-width: 680px;
				margin: 0 auto;
				padding: 3em 1em;
			}
			.title {
				margin-bottom: 2.5em;
				text-align: center;
			}
			.title h1 {
				margin: 0.5em 0;
				font-size: 2.2em;
				line-height: 1.3;
				color: var(--text-primary);
			}
			.date {
				color: var(--text-muted);
				font-size: 0.9rem;
			}
			.last-updated-on {
				font-style: italic;
				font-size: 0.85rem;
				margin-top: 0.5em;
				color: var(--text-muted);
			}
			.prose {
				color: var(--text-primary);
				font-size: 1.1rem;
				line-height: 1.8;
			}
			.prose :global(p) {
				margin-bottom: 1.5em;
			}
			.prose :global(h2) {
				margin-top: 1.8em;
				margin-bottom: 0.8em;
				font-size: 1.6em;
				color: var(--text-primary);
			}
			.prose :global(h3) {
				margin-top: 1.5em;
				margin-bottom: 0.6em;
				font-size: 1.3em;
				color: var(--text-primary);
			}
			.prose :global(h4) {
				margin-top: 1.3em;
				margin-bottom: 0.5em;
				font-size: 1.1em;
				color: var(--text-primary);
			}
			.prose :global(ul), 
			.prose :global(ol) {
				margin-bottom: 1.5em;
				padding-left: 1.5em;
			}
			.prose :global(li) {
				margin-bottom: 0.5em;
			}
			.prose :global(blockquote) {
				margin: 2em 0;
				padding: 1em 1.5em;
				background-color: var(--blockquote-bg);
				border-left: 4px solid var(--accent);
				border-radius: 4px;
				font-style: italic;
			}
			.prose :global(code) {
				font-size: 0.9em;
				padding: 0.2em 0.4em;
				background-color: var(--code-bg);
				color: #ff6b6b;
				border-radius: 3px;
				font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
			}
			.prose :global(pre) {
				margin: 2em 0;
				padding: 1.5em;
				background-color: var(--code-bg);
				border: 1px solid var(--border-color);
				border-radius: 8px;
				overflow-x: auto;
			}
			.prose :global(pre code) {
				background: none;
				padding: 0;
				color: var(--text-primary);
			}
			hr {
				margin: 2.5em 0;
				border: none;
				border-top: 1px solid var(--border-color);
			}
			@media (max-width: 720px) {
				article {
					padding: 2em 1em;
				}
				.title h1 {
					font-size: 1.8em;
				}
				.prose {
					font-size: 1rem;
				}
				.prose :global(h2) {
					font-size: 1.4em;
				}
				.prose :global(h3) {
					font-size: 1.2em;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="title">
					<h1>{title}</h1>
					<div class="date">
						<FormattedDate date={pubDate} />
						{
							updatedDate && (
								<div class="last-updated-on">
									Last updated on <FormattedDate date={updatedDate} />
								</div>
							)
						}
					</div>
				</div>
				<hr />
				<div class="prose">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
