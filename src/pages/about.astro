---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`About - ${SITE_TITLE}`} description="About shiopon" />
		<style>
			main {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 3em 1em;
			}
			h1 {
				margin-bottom: 2rem;
				color: var(--text-primary);
			}
			.profile {
				background: var(--bg-secondary);
				border: 1px solid var(--border-color);
				border-radius: 8px;
				padding: 2rem;
				margin-bottom: 2rem;
			}
			.intro {
				font-size: 1.2rem;
				color: var(--text-primary);
				margin-bottom: 2rem;
				line-height: 1.6;
			}
			.social-links {
				margin-top: 2rem;
			}
			.social-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				color: var(--accent);
				text-decoration: none;
				font-size: 1.1rem;
				padding: 0.75rem 1.5rem;
				background: var(--bg-tertiary);
				border: 1px solid var(--accent);
				border-radius: 6px;
				transition: all 0.2s ease;
			}
			.social-link:hover {
				background: var(--accent);
				color: var(--bg-main);
				transform: translateY(-1px);
			}
			.x-icon {
				width: 20px;
				height: 20px;
				fill: currentColor;
			}
			@media (max-width: 720px) {
				main {
					padding: 2em 1em;
				}
				.profile {
					padding: 1.5rem;
				}
				.intro {
					font-size: 1.1rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>About</h1>
			<div class="profile">
				<p class="intro">I'm programmer in Japan</p>
				
				<div class="social-links">
					<a href="https://x.com/shiopon01" target="_blank" rel="noopener noreferrer" class="social-link">
						<svg class="x-icon" viewBox="0 0 24 24" aria-hidden="true">
							<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
						</svg>
						@shiopon01
					</a>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
