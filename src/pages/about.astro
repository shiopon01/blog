---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={`About - ${SITE_TITLE}`} description="About shiopon" />
		<style>
			main {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 3.5em 1em 4em;
			}
			h1 {
				margin-bottom: 0.75rem;
				color: var(--text-primary);
			}
			.intro {
				margin: 0 0 2rem 0;
				font-size: 1.1rem;
				color: var(--text-secondary);
				line-height: 1.8;
			}
			.section {
				padding: 1.5rem 0;
				border-top: 1px solid var(--border-color);
			}
			.section:first-of-type {
				border-top: none;
				padding-top: 0;
			}
			.section-title {
				margin: 0 0 0.75rem 0;
				font-size: 1.1rem;
				color: var(--text-primary);
			}
			.section p {
				margin: 0 0 0.75rem 0;
				color: var(--text-secondary);
				line-height: 1.8;
			}
			.section ul {
				margin: 0;
				padding-left: 1.2rem;
				color: var(--text-secondary);
				line-height: 1.8;
			}
			.section li {
				margin-bottom: 0.4rem;
			}
			.social-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				color: var(--accent);
				text-decoration: none;
				font-size: 1rem;
				padding: 0.6rem 1.2rem;
				border: 1px solid var(--border-color);
				border-radius: 999px;
				transition: color 0.2s ease, border-color 0.2s ease;
			}
			.social-link:hover {
				color: var(--accent-dark);
				border-color: var(--accent-dark);
			}
			.x-icon {
				width: 20px;
				height: 20px;
				fill: currentColor;
			}
			@media (max-width: 720px) {
				main {
					padding: 2.5em 1em 3em;
				}
				.intro {
					font-size: 1rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>About</h1>
			<p class="intro">shioponです。技術や日常について書いています。</p>
			<section class="section">
				<h2 class="section-title">このブログについて</h2>
				<p>技術メモ、作ったもの、考えたことを中心に更新しています。</p>
			</section>
			<section class="section">
				<h2 class="section-title">興味のあること</h2>
				<ul>
					<li>環境改善</li>
				</ul>
			</section>
			<section class="section">
				<h2 class="section-title">SNS</h2>
				<a href="https://x.com/shiopon01" target="_blank" rel="noopener noreferrer" class="social-link">
					<svg class="x-icon" viewBox="0 0 24 24" aria-hidden="true">
						<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
					</svg>
					@shiopon01
				</a>
			</section>
		</main>
		<Footer />
	</body>
</html>
